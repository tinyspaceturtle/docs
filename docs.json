{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "TinyBrain Docs",
  "colors": {
    "primary": "#3b82f6",
    "light": "#60a5fa",
    "dark": "#2563eb",
    "background": {
      "light": "#ffffff",
      "dark": "#0f172a"
    }
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "authentication",
              "installation"
            ]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "concepts/memory-types",
              "concepts/architecture",
              "concepts/intelligence"
            ]
          },
          {
            "group": "Integrations",
            "pages": [
              "integrations/overview",
              "integrations/gmail",
              "integrations/calendar",
              "integrations/slack",
              "integrations/langchain"
            ]
          },
          {
            "group": "SDKs",
            "pages": [
              "sdks/typescript",
              "sdks/python"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/introduction",
              "api-reference/authentication"
            ]
          },
          {
            "group": "Memory Endpoints",
            "pages": [
              "api-reference/memory/create",
              "api-reference/memory/search",
              "api-reference/memory/get",
              "api-reference/memory/delete"
            ]
          },
          {
            "group": "Intelligence",
            "pages": [
              "api-reference/intelligence/predict",
              "api-reference/intelligence/patterns"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://tinybrainlab.ai",
          "icon": "gauge"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/tinyspaceturtle/TinyBrain-Alpha",
          "icon": "github"
        },
        {
          "anchor": "Community",
          "href": "https://discord.gg/tinybrain",
          "icon": "discord"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@tinybrainlab.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://tinybrainlab.ai/sign-up"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "cursor"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/tinybrainai",
      "github": "https://github.com/tinyspaceturtle/TinyBrain-Alpha"
    }
  }
}
